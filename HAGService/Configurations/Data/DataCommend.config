  <DataCommend name="SearchMission" database="HAGDB">
    <![CDATA[
      SELECT [MissionId]
            ,[MissionType]
            ,[Address]
            ,[Latitude]
            ,[Longitude]
            ,[InDate]
            ,[LastEdit]
            ,[Status]
            ,[Highlight]
        FROM [HAGDB].[dbo].[Mission]
        WHERE [MissionType] IN (@MissionType)
